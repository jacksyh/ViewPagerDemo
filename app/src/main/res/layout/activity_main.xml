<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_tag1"
        android:text="getCount()返回Integer.MAX_VALUE"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_banner1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tag1">
    </android.support.v4.view.ViewPager>
    <TextView
        android:text="前尾插入数据"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:id="@+id/tv_tag2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewpager_banner1"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_banner2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tag2">
    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>